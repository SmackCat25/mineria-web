    "   \"source\": [\n",
    "    \"import random\\n\",\n",
    "    \"import re\\n\",\n",
    "    \"from collections import defaultdict\"\n",
    "   ],\n",
    "   \"outputs\": [],\n",
    "   \"execution_count\": 1\n",
    "  },\n",
    "  {\n",
    "   \"metadata\": {\n",
    "    \"ExecuteTime\": {\n",
    "     \"end_time\": \"2025-09-10T01:10:01.391155Z\",\n",
